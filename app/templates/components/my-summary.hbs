<div class="area" id="my-summary">
  <div class="clearfix">
    <div class="title"><h3>新闻摘要:</h3></div>
    <div class="button-list">
        <ul class="list">
          {{#each list as |item index|}}
            <li class="inline {{is-selected item.index selected}}"><a onclick={{action 'click' item.index}}>{{item.name}}</a></li>
          {{/each}}
        </ul>
    </div>
  </div>
  <div>
    <p>{{data.word}}</p>
  </div>
</div>