<div class="area" id="my-tag">
  <div class="clearfix">
    <div class="title">
      <h3>词性分析:</h3>
    </div>
  </div>
  <div class="result-center">
    <ul class="list">
      {{#each data as |items|}}
      <li class="clearfix">
        <div class="words">
          <ul class="list">
            {{#each items.list as |item|}}
            <li class="inline">
              <span class="tag {{item.tag}}">{{item.word}}</span>
            </li>
            {{/each}}
          </ul>
        </div>
        <div class="word-mean">
          <div>类别图示:</div>
          <ul class="list">
            {{#each items.tag as |item|}}
            <li class="inline">
              <span class="tag {{item}}">{{tag-tag item}}</span>
            </li>
            {{/each}}
          </ul>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>