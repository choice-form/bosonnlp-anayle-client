<div class="area" id="my-sentiment">
  <div class="clearfix">
    <div class="title">
      <h3>情感分析:</h3>
    </div>
    <div class="button-list">
      <ul>
        {{#each list as |item index|}}
        <li class="inline {{is-selected item.index selected}}">
          <a onclick={{action 'selectSentiment' index}}>{{item.name}}</a>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div>
    <div>
      <ul class="list">
        {{#each data as |items|}}
        <li>
          <div>
            <ul class="list">
              {{#each items as |item|}}
              <li class="inline">{{item}}</li>
              {{/each}}
            </ul>
            <div class="chart" id="chart">

            </div>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>